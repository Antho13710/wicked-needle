{% extends "base.html.twig" %}

{% block body %}

        {% if app.user is not null %}
            <div class="text-center mb-5">
                <a href="{{ path('editImage', { id: image.id }) }}" class="btn btn-light">Modifier</a>
                <a href="#" onclick="event.preventDefault(); confirm('Etes-vous sÃ»r ?') && document.getElementById('form').submit();"><button class="btn btn-danger">Supprimer</button></a>
